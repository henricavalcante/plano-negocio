{
  "rules": {
    "users": {
      ".read": "true",
      ".write": "true"
    },
    "planos": {
      "$projeto": {
        ".read": "root.child('admins').child(auth.uid).child($projeto).val() == true",
        "$user_id": {
          ".read": "$user_id === auth.uid || root.child('admins').child(auth.uid).child($projeto).val() == true",
          ".write": "$user_id === auth.uid",
          "plano": {
            ".read": "$user_id === auth.uid || root.child('admins').child(auth.uid).child($projeto).val() == true",
            ".write": "$user_id === auth.uid"
          },
          "revisao": {
            ".read": "$user_id === auth.uid || root.child('admins').child(auth.uid).child($projeto).val() == true",
            ".write": "root.child('admins').child(auth.uid).child($projeto).val() == true"
          }
        }
      }
    },
    "admins": {
      "$user_id": {
        ".read": "$user_id === auth.uid"
      }
    }
  }
}
